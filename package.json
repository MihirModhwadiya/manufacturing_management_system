{
  "name": "mern-auth-system",
  "version": "1.0.0",
  "description": "Full-stack MERN authentication system with TypeScript",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "concurrently \"npm run server:start\" \"npm run client:build\"",
    "server:dev": "cd server && npm run dev",
    "server:start": "cd server && npm start",
    "client:dev": "cd client && npm run dev",
    "client:build": "cd client && npm run build",
    "client:preview": "cd client && npm run preview",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "npm run client:build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "concurrently": "^7.6.0"
  },
  "keywords": ["MERN", "authentication", "React", "TypeScript", "Express", "MongoDB"],
  "author": "Your Name",
  "license": "MIT"
}